<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans.xsd
               http://code.alibabatech.com/schema/dubbo
               http://code.alibabatech.com/schema/dubbo/dubbo.xsd
               http://www.springframework.org/schema/context
               http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="cn.ryanpenn.dubbo.samples.shop.service.user.*.*"/>

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="user-service" owner="ryan" organization="ryanpenn.cn"/>

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181,127.0.0.1:2182,127.0.0.1:2183"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="cn.ryanpenn.dubbo.samples.shop.service.api.user.UserService"
                   ref="userServiceImpl"/>

</beans>